<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thu.jiakai.wordbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="thu.jiakai.wordbar.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thu.jiakai.wordbar.ExploreActivity"
            android:label="@string/title_activity_explore" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="thu.jiakai.wordbar.MainActivity" />
        </activity>
        <activity
            android:name="thu.jiakai.wordbar.ReviewActivity"
            android:label="@string/title_activity_review" >
        </activity>
    </application>

</manifest>
